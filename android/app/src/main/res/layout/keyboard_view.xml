<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="280dp"
    android:background="@color/keyboard_background"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingTop="12dp"
    android:paddingEnd="16dp"
    android:paddingBottom="16dp">
    
    <!-- Header Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        
        <!-- Offline Indicator -->
        <LinearLayout
            android:id="@+id/offline_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/offline_indicator_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="8dp"
            android:paddingTop="4dp"
            android:paddingEnd="8dp"
            android:paddingBottom="4dp">
            
            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/ic_wifi_off"
                android:tint="@color/offline_green" />
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="@string/offline"
                android:textColor="@color/offline_green"
                android:textSize="10sp"
                android:textStyle="bold" />
        </LinearLayout>
        
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />
        
        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>
    
    <!-- Status Text -->
    <TextView
        android:id="@+id/status_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="@string/tap_hold_to_dictate"
        android:textColor="@color/text_secondary"
        android:textSize="14sp" />
    
    <!-- Main Content Area -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        
        <!-- Waveform Visualization -->
        <com.voiceboard.android.WaveformView
            android:id="@+id/waveform_view"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:visibility="gone" />
        
        <!-- Microphone Button -->
        <ImageView
            android:id="@+id/mic_button"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:background="@drawable/mic_button_background"
            android:contentDescription="@string/microphone_button"
            android:scaleType="centerInside"
            android:src="@drawable/ic_mic_normal" />
    </FrameLayout>
    
    <!-- Utility Buttons Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="5">
        
        <ImageView
            android:id="@+id/delete_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/utility_button_background"
            android:contentDescription="@string/delete"
            android:scaleType="centerInside"
            android:src="@drawable/ic_backspace" />
        
        <ImageView
            android:id="@+id/space_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:background="@drawable/utility_button_background"
            android:contentDescription="@string/space"
            android:scaleType="centerInside"
            android:src="@drawable/ic_space" />
        
        <ImageView
            android:id="@+id/enter_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:background="@drawable/utility_button_background"
            android:contentDescription="@string/enter"
            android:scaleType="centerInside"
            android:src="@drawable/ic_keyboard_return" />
        
        <ImageView
            android:id="@+id/settings_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:background="@drawable/utility_button_background"
            android:contentDescription="@string/settings"
            android:scaleType="centerInside"
            android:src="@drawable/ic_settings" />
        
        <ImageView
            android:id="@+id/hide_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:background="@drawable/utility_button_background"
            android:contentDescription="@string/hide_keyboard"
            android:scaleType="centerInside"
            android:src="@drawable/ic_keyboard_hide" />
    </LinearLayout>
</LinearLayout>